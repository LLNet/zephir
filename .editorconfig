# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,md,cabal}]
indent_style = space

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
